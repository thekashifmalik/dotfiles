#!/usr/bin/env bash
set -eo pipefail

echo "> linking SSH config"
mkdir --parents --verbose ~/.ssh
ln --force --symbolic --verbose $PWD/ssh/config ~/.ssh
ln --force --symbolic --verbose $PWD/ssh/config.d ~/.ssh
