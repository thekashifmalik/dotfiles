#!/usr/bin/env bash
set -eo pipefail

echo "Backing up: whatisthebestcolor"

ssh desktop-1 "cd ~/whatisthebestcolor && bin/pg_dump > db.dump"

rsync -hav --delete \
    desktop-1:~/whatisthebestcolor/db.dump \
    desktop-1:~/whatisthebestcolor/var/nginx/access.log \
    desktop-1:~/whatisthebestcolor/var/nginx/error.log \
    /volume1/whatisthebestcolor

ssh desktop-1 "cd ~/whatisthebestcolor && rm -v db.dump"
