#!/usr/bin/env bash
set -eo pipefail

HOST=desktop-1
echo "Backing up: $HOST"

exec rsync -hav --delete \
    $HOST:/mnt/HDD-3/Music \
    $HOST:/mnt/HDD-3/Movies \
    $HOST:/mnt/HDD-3/Documents \
    $HOST:/mnt/HDD-3/Filmmaking \
    $HOST:/mnt/HDD-3/ISOs \
    $HOST:/mnt/HDD-3/Pictures \
    $HOST:/mnt/HDD-3/Screenplays \
    $HOST:/mnt/HDD-3/Videos \
    $HOST:/mnt/HDD-3/Hidden \
    $HOST:/mnt/HDD-3/Papers \
    /volume1/$HOST
