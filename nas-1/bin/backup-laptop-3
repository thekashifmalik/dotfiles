#!/usr/bin/env bash
set -eo pipefail

HOSTNAME=laptop-3
echo "Backing up: $HOSTNAME"

echo "Backing up: $HOSTNAME files"

rsync -hav --delete \
    "$HOSTNAME:~/Logic" \
    "$HOSTNAME:~/No\ Crimson" \
    "$HOSTNAME:~/Photography" \
    /volume1/$HOSTNAME

echo "Backing up: $HOSTNAME Lightroom"

rsync -hav --delete "$HOSTNAME:~/Pictures/Lightroom/Backups/" /volume1/$HOSTNAME/Lightroom
