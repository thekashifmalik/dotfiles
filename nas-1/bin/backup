#!/usr/bin/env bash
set -eo pipefail

CONFIG=nas-1/backup.d

for TARGET in `ls $CONFIG`
do
    echo "> Reading: $CONFIG/$TARGET"
    SOURCES=""
    while read SOURCE
    do
        echo "> Found: $SOURCE"
        SOURCES="$SOURCES $SOURCE"
    done < $CONFIG/$TARGET

    DESTINATION=/volume1/${TARGET//.//}
    rsync -hav --delete $SOURCES $DESTINATION
done
