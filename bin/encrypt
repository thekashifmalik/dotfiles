#!/usr/bin/env bash
set -eo pipefail

mkdir -pv vault/ssh/config.d
gpg -v --passphrase-file keys/symmetric.key --batch --yes --symmetric -o vault/ssh/config.d/desktop-1.gpg ssh/config.d/desktop-1
gpg -v --passphrase-file keys/symmetric.key --batch --yes --symmetric -o vault/ssh/config.d/laptop-2.gpg ssh/config.d/laptop-2
gpg -v --passphrase-file keys/symmetric.key --batch --yes --symmetric -o vault/ssh/config.d/laptop-3.gpg ssh/config.d/laptop-3
gpg -v --passphrase-file keys/symmetric.key --batch --yes --symmetric -o vault/ssh/config.d/server-1.gpg ssh/config.d/server-1
gpg -v --passphrase-file keys/symmetric.key --batch --yes --symmetric -o vault/ssh/config.d/server-2.gpg ssh/config.d/server-2
gpg -v --passphrase-file keys/symmetric.key --batch --yes --symmetric -o vault/ssh/config.d/nas-1.gpg ssh/config.d/nas-1
gpg -v --passphrase-file keys/symmetric.key --batch --yes --symmetric -o vault/ssh/config.d/github.com.gpg ssh/config.d/github.com
