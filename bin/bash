#!/usr/bin/env bash
set -eo pipefail
echo "Linking files:"
ln -sfv \
    $PWD/bash/.bashrc \
    $PWD/bash/.bash_profile \
    $PWD/bash/.bash_aliases \
    $PWD/bash/.bash_prompt \
    ~
# Disable last login message
touch ~/.hushlogin
# echo "Run the following command or start a new shell:\n. ~/.bashrc"
echo "Run the following command or start a new shell:"
echo ". ~/.bashrc"
