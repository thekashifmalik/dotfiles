#!/usr/bin/env bash
set -exo pipefail

echo "Linking files:"
ln \
    --symbolic \
    --force \
    --verbose \
    $PWD/bash/.bashrc \
    $PWD/bash/.bash_profile \
    $PWD/bash/.bash_aliases \
    $PWD/bash/.bash_prompt \
    ~

echo "Run the following command or start a new shell:"
echo ". ~/.bashrc"
