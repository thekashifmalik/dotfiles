#!/usr/bin/env bash
set -eo pipefail

cd ~/whatisthebestcolor
bin/pg_dump > db.dump
rsync -hav --delete -e ssh \
    ~/whatisthebestcolor/db.dump \
    ~/whatisthebestcolor/var/nginx/access.log \
    ~/whatisthebestcolor/var/nginx/error.log \
    $DESTINATION/whatisthebestcolor/
rm -v db.dump

cd ~/somememes
bin/pg_dump > db.sql
rsync -hav --delete -e ssh \
    ~/somememes/db.sql \
    $DESTINATION/somememes/
rm -v db.sql
